$(OBJECT_DIR)/common_filter_unittest : \
	$(OBJECT_DIR)/common_filter_unittest.o \
	$(OBJECT_DIR)/common/filter.o \
	$(OBJECT_DIR)/gtest_main.a

	$(CXX) $(CXX_FLAGS) $^ -o $(OBJECT_DIR)/$@

